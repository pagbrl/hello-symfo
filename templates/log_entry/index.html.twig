{% extends 'base.html.twig' %}

{% block title %}LogEntry index{% endblock %}

{% block body %}
    <h1>LogEntry index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>Timestamp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log_entry in log_entries %}
            <tr>
                <td>{{ log_entry.id }}</td>
                <td>{{ log_entry.name }}</td>
                <td>{{ log_entry.content }}</td>
                <td>{{ log_entry.timestamp ? log_entry.timestamp|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_log_entry_show', {'id': log_entry.id}) }}">show</a>
                    <a href="{{ path('app_log_entry_edit', {'id': log_entry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_log_entry_new') }}">Create new</a>
{% endblock %}
